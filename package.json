{
  "name": "tree-sitter-context",
  "version": "1.0.0",
  "description": "Parser for the ConTeXt trypsetting language",
  "main": "bindings/node",
  "scripts": {
    "test": "tree-sitter test"
  },
  "author": "Paul Mazaitis <paul@mazaitis.org",
  "license": "ISC",
  "dependencies": {
    "nan": "^2.15.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.20.6"
  }
  "tree-sitter": [
    {
      "scope": "text.tex.context",
      "file-types": [
        "tex",
        "ctx",
        "mkiv",
        "mkxl"
      ],
      "content-regex": "(\\starttext|\\startcomponent)",
      "injection-regex": "context"
    }
  ]
}
